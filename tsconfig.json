{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ESNext",
		"importsNotUsedAsValues": "error",
		"sourceMap": true,
		"types": [
			"svelte"
		],
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@models/*": ["./models/*"],
			"@store/*": ["./store/*"],
			"@service/*": ["./service/*"],
			"@ui-elements/*": ["./components/ui-elements/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules/*",
		"public/*"
	]
}
